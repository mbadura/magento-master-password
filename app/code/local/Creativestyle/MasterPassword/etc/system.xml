<?xml version="1.0"?>
<config>
	  <sections>
		<master_password  translate="label" module="masterpassword">
		<label>Master Password</label>
		<tab>advanced</tab>
		<frontend_type>text</frontend_type>
		<sort_order>100000</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>
					<groups>
				      <master_password_config translate="label">
					  <label>Master Password Config</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>1</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <mp_enable translate="label">
                            <label>Enable Master Password</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Please check if you want to enable master password for magento. Remember, this only affects store view.</comment>
                          </mp_enable>
                           <mp_password translate="label">
                               <label>Password</label>
                               <frontend_type>password</frontend_type>
                               <sort_order>2</sort_order>
                               <show_in_default>1</show_in_default>
                               <show_in_website>1</show_in_website>
                               <show_in_store>1</show_in_store>
                           </mp_password>
					   </fields>
					   </master_password_config>
					</groups>
		</master_password>
	  </sections>
</config>
